{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@libs/*": [
        "./src/libs/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@hook/*": [
        "./src/hooks/*"
      ],
      "@customTypes/*": [
        "./src/types/*"
      ],
      "@elements/*": [
        "./src/components/Elements/*"
      ],
      "@common/*": [
        "./src/components/Common/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "site.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
